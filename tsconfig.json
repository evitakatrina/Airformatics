{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react",
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
} 